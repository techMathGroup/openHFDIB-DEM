outputSetup
{
    basic true;
    iB  true;
    DEM true;
    addModel false;
    parallelDEM false;
}
DEM
{
    materials
    {
        particle
        {
            Y       6e8;
            // nu      0.5;
            nu      0.0;
            gamma   5;
            mu      0;
            adhN    0;
			eps     1;
        }
        
        wall
        {
            Y       1e8;
            // nu      0.5;
            nu      0.0;
            gamma   5;
            mu      0;
            adhN    0;
			eps 	1;
        }   
    }

	LcCoeff 4.0;
    betaCoeff 5.0;
	useOldModel false;	
	
    collisionPatches
    {
		wall0
		{
			material wall;
			nVec (1.0 0.0 0.0);
			planePoint (0.015 0.00 0.0);
		}
		wall1
		{
			material wall;
			nVec (0.0 0.0 1.0);
			planePoint (0.0 0.0 0.015);
		}
		wall2
		{
			material wall;
			nVec (-1.0 0.0 0.0);
			planePoint (-0.015 0.0 0.0);
		}
		wall3
		{
			material wall;
			nVec (0.0 0.0 -1.0);
			planePoint (0.0 0.0 -0.015);
		}
		bot
		{
			material wall;
			nVec (0.0 -1.0 0.0);
			planePoint (0.0 -0.05 0.0);
		}
    }
}

virtualMesh
{
    level 4;
    charCellSize 0.001;
    recordContact false;
}

icoSphere
{

	fullyCoupledBody
	{
		velocity (0 -1.0 0);
	}

	rho         rho [1 -3 0 0 0 0 0] 4000;

	refineMC 5;

	U
	{
	BC  noSlip;
	}

	bodyAddition
	{
		addModel   once;//<-constant, only once
		onceCoeffs{}
	}
		
	material particle;
	bodyGeom convex;
	updateTorque false;
	sdBasedLambda false;
	interfaceSpan 1.0;
	startSynced false;
	refineBuffers 2;
	timesToSetStatic -1;
	
}

