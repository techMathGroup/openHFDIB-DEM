virtualMesh
{
    level 4;
    charCellSize 0.001;
    recordContact false;
}

sphere_Top
{

	fullyCoupledBody
	{
		velocity (0 -1.0 0);
	}

	rho         rho [1 -3 0 0 0 0 0] 4000;

	refineMC 5;

	U
	{
	BC  noSlip;
	}

	bodyAddition
	{
		addModel   once;//<-constant, only once
		onceCoeffs{}
	}
		
	material particle;
	bodyGeom sphere;
	sphere
	{
		radius 0.01;
		startPosition (0 0.035 0);
	}

	updateTorque false;
	sdBasedLambda false;
	interfaceSpan 1.0;
	startSynced false;
	refineBuffers 1;
	timesToSetStatic -1;
}

